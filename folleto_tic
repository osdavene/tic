    <!-- Botón para generar PDF -->
    <div class="text-center mt-8 print-hidden">
        <button id="download-pdf-tic" class="bg-blue-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg hover:bg-blue-700 transition-colors">
            Descargar Folleto en PDF
        </button>
    </div>

    <script>
        document.getElementById('download-pdf-tic').addEventListener('click', function () {
            const button = this;
            button.textContent = 'Generando PDF...';
            button.disabled = true;
            const element = document.getElementById('folleto-completo-tic').cloneNode(true);
            const exterior = element.querySelector('#cara-exterior-tic');
            const interior = element.querySelector('#cara-interior-tic');
            exterior.classList.remove('max-w-7xl', 'mx-auto', 'mb-12');
            interior.classList.remove('max-w-7xl', 'mx-auto');
            interior.classList.add('pdf-page-break');
            const opt = {
                margin: 0,
                filename: 'folleto_tic_stem.pdf',
                image: { type: 'jpeg', quality: 1.0 },
                html2canvas: { scale: 3, useCORS: true, logging: false },
                jsPDF: { unit: 'mm', format: [330, 216], orientation: 'landscape' },
                pagebreak: { mode: 'css', before: '.pdf-page-break' }
            };
            html2pdf().from(element).set(opt).save().then(() => {
                button.textContent = 'Descargar Folleto en PDF';
                button.disabled = false;
            }).catch(err => {
                console.error("Error al generar el PDF:", err);
                button.textContent = 'Error al generar. Inténtalo de nuevo.';
                button.disabled = false;
            });
        });
    </script>

